{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "rootDirs": [
      "src/*",
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "rollup.config.js",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
  ]
}
